<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          http://maven.apache.org/xsd/settings-1.0.0.xsd">
  <servers>
    <server>
      <id>opentable</id>
      <username>build</username>
      <password>\{DESede\}CRPWQ7yFOKIC5qHtkYKcoA==</password>
    </server>
    <server>
      <id>opentable.snapshot</id>
      <username>build</username>
      <password>\{DESede\}CRPWQ7yFOKIC5qHtkYKcoA==</password>
    </server>
  </servers>

  <mirrors>
    <mirror>
      <id>opentable-mirror</id>
      <name>OpenTable mirror of central repo</name>
      <url>https://artifactory.otenv.com/remote-repos</url>
      <mirrorOf>!opentable,!opentable.snapshot</mirrorOf>
    </mirror>
  </mirrors>


  <profiles>
    <profile>
      <id>opentable</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <repositories>
        <repository>
          <id>opentable</id>
          <url>https://artifactory.otenv.com/repo</url>
          <snapshots>
            <updatePolicy>daily</updatePolicy>
          </snapshots>
          <releases>
            <updatePolicy>never</updatePolicy>
          </releases>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>opentable</id>
          <url>https://artifactory.otenv.com/repo</url>
          <snapshots>
            <updatePolicy>daily</updatePolicy>
          </snapshots>
          <releases>
            <updatePolicy>never</updatePolicy>
          </releases>
        </pluginRepository>
      </pluginRepositories>
    </profile>

    <profile>
      <id>force-deploy-snapshot</id>
      <properties>
        <altDeploymentRepository>opentable.snapshot::default::https://artifactory.otenv.com/snapshots</altDeploymentRepository>
      </properties>
    </profile>
    <profile>
      <id>force-deploy</id>
      <properties>
        <altDeploymentRepository>opentable::default::https://artifactory.otenv.com/internal</altDeploymentRepository>
      </properties>
    </profile>

    <profile>
      <id>downloadSources</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <downloadSources>true</downloadSources>
        <downloadJavadocs>true</downloadJavadocs>
      </properties>
    </profile>
  </profiles>
</settings>
